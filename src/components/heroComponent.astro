---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<section class="relative w-full h-[70vh]">

  <!-- Imagen de la portada -->
  <div class="absolute inset-0">
    <img src={image} alt={title} class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-purple-900/50"></div>
  </div>

  <!-- Texto de la portada -->
  <div class="relative z-10 max-w-4xl mx-auto px-6 h-full flex flex-col justify-center">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4"> {title} </h1>
    <p class="text-lg md:text-xl text-white leading-relaxed"> {description} </p>
  </div>
</section>