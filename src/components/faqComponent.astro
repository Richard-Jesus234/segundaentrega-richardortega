---
import type { Faq } from "../data/faqs/faqMac";
const props = Astro.props as Faq;
const { question, answer } = props;
---
<!-- toma los archivos del data/faqs -->
<div class="bg-white rounded-xl shadow-lg p-6 hover:scale-105 transition-transform duration-300">
  <h3 class="text-xl font-semibold text-gray-900 mb-3">{question}</h3>
  <p class="text-gray-700 text-base">{answer}</p>
</div>