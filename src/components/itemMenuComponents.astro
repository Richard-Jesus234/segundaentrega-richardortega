---
import type { ItemMenu } from "../data/itemMenu";
export interface Props {
  items: ItemMenu[];
  layout?: 'horizontal' | 'vertical';
}
const { items, layout = 'horizontal' } = Astro.props;
const isHorizontal = layout === 'horizontal';
---

<nav class:list={[
  'font-medium text-sm',
  {
    'hidden md:flex space-x-6': isHorizontal,
    'flex flex-col space-y-1': !isHorizontal 
  }
]}>
  {items.map((item) => (
    item.children ? (
      <div class:list={[{ 'relative group': isHorizontal }]}> 
        <button class="px-3 py-2 rounded-md hover:bg-green-700 transition duration-300 flex items-center justify-between w-full">
          {item.name} <i class="fas fa-caret-down ml-1"></i>
        </button>
        
        <div class:list={[
          'rounded-md',
          {
            'absolute left-0 mt-2 w-48 bg-white text-gray-800 shadow-lg opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transform transition-all duration-300 z-10': isHorizontal,
            'relative w-full pl-4 mt-1': !isHorizontal
          }
        ]}>
          {item.children.map((child) => (
            <a 
              href={child.href} 
              class:list={[
                'block px-4 py-2 text-sm',
                {
                  'text-gray-800 hover:bg-green-100': isHorizontal,
                  'text-white hover:bg-green-700 rounded-md': !isHorizontal
                }
              ]}
            >
              {child.name}
            </a>
          ))}
        </div>
      </div>
    ) : (
      <a href={item.href} class="px-3 py-2 rounded-md hover:bg-green-700 transition duration-300 flex items-center">
        {item.name === "Inicio" ? <i class="fa-solid fa-house mr-1"></i> : ""} {item.name}
      </a>
    )
  ))}
</nav>