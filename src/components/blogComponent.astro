---
import noticias from "../data/noticias.json";
import TituloComponents from "./tituloComponents.astro";
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
  <TituloComponents text="Últimos Artículos" stilo="text-center text-2xl sm:text-3xl md:text-4xl" />
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 mt-6 sm:mt-8">
    {noticias.map((n) => (
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
      <div class="relative">
        <img src={n.imagen} alt={n.titulo} class="w-full h-40 sm:h-48 object-cover" />
        <div class="absolute top-0 right-0 bg-green-600 text-white text-xs px-2 py-1 m-2 rounded">Nuevo</div>
      </div>
      <div class="p-4 sm:p-6">
        <h3 class="text-lg sm:text-xl font-bold mb-2 line-clamp-2">{n.titulo}</h3>
        <p class="text-gray-600 mb-4 text-sm sm:text-base line-clamp-3">{n.descripcion}</p>
        <div class="flex justify-between items-center">
          <a href={n.link} class="text-green-700 font-medium hover:underline flex items-center">
            <span>Leer más</span> 
            <i class="fa-solid fa-arrow-right ml-1"></i>
          </a>
          <span class="text-xs text-gray-500">{n.fecha || 'Reciente'}</span>
        </div>
      </div>
    </div>
    ))}
  </div>
</section>