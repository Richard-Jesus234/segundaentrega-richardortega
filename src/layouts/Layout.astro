---
import '../styles/global.css'
import HeaderComponents from '../components/headerComponent.astro';
import FooterComponents from '../components/footerComponent.astro';

interface Props {
    includeHeader?: boolean;
    includeFooter?: boolean;
}

const { 
    includeHeader = true,
    includeFooter = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
        <title>Ratafix</title>
        <link rel="shortcut icon" href="/src/assets/img/logo.png" />
    </head>
    <body>
        {includeHeader && <HeaderComponents />}
        <slot />
        {includeFooter && <FooterComponents />}
    </body>
</html>