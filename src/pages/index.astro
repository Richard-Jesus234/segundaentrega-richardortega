---
import Layout from '../layouts/Layout.astro';
import TituloComponents from '../components/tituloComponents.astro';
import HeroComponent from '../components/heroComponent.astro';
import CartaComponent from '../components/cartaComponent.astro';
import { cartaEpica } from "../data/cartaEpica";
import Image from "../components/image.astro";
---

<Layout includeFooter={true}>
    <HeroComponent
        title="Ratafix"
        description="La empresa más confiable y con más de 10 años de experiencia en reparación de notebooks, Mac y servicio técnico. Servicio excelente garantizado, tu solución está aquí."
        image="/src/assets/img/fondo1.jpg"
    />
        
<!-- Servicios -->
<section class="max-w-7xl mx-auto px-6 py-12 pt-30 ">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
    <div class="md:col-span-2 flex gap-4">
      <Image src="/src/assets/img/epico.jpg" alt="Reparación" stilo="w-1/2" />
      <Image src="/src/assets/img/epico2.jpg" alt="Reparación" stilo="w-1/2" />
    </div>
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-green-700 uppercase">Servicios ratafixeanos</h4>
        <TituloComponents text="Nuestros servicios le ahorran tiempo" stilo='text-left'/>
        <ul class="space-y-2 text-gray-700">
          <li>-Reparación de computadoras</li>
          <li>-Upgrades de hardware</li>
          <li>-Optimización del sistema</li>
          <li>-Mantenimiento preventivo</li>
          <li>-Formateo y reinstalación de sistema operativo</li>
        </ul>

        <a href="contacto.html" class="inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded-full shadow hover:bg-green-700 transition">
          Contáctanos Ahora!
        </a>
      </div>
    </div>
  </section>

<!-- cartas de por qué elegir a ratafix -->

<section class="bg-gray-50 py-16">
  <div class="max-w-6xl mx-auto px-6">
    <TituloComponents text="¿Por qué elegir a Ratafix?" stilo='text-center'/>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {cartaEpica.map((carta) => (
        <CartaComponent
          image={carta.image}
          title={carta.title}
          description={carta.description}
        />
      ))}
    </div>
  </div>
</section>
</Layout>