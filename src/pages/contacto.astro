---
import Layout from '../layouts/Layout.astro';
import TituloComponents from '../components/tituloComponents.astro';
---

<Layout includeFooter={true}>
    <!-- Fondo de video -->
    <video autoplay muted loop id="video-fondo" class="fixed top-0 left-0 w-full h-full object-cover z-[-1]">
    <source src="/src/assets/video/fondo.mp4" type="video/mp4" />
    Tu navegador no soporta videos.
  </video>
    <!-- Form que envia todo a mi correo mediante formspree -->
  <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-lg mx-auto pt-30 mb-10">
    <TituloComponents text="Contáctanos" stilo="text-center" />
    <form action="https://formspree.io/f/xyzeoabd" method="POST" class="space-y-4">
      <!-- Nombre -->
      <div>
        <label for="nombre" class="block text-gray-700 font-medium">Nombre y apellido*</label>
        <input type="text" id="nombres" name="nombres" placeholder="Tu nombre" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-gray-700 font-medium">Correo*</label>
        <input type="email" id="email" name="email" placeholder="correo@ejemplo.cl" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Telefono -->
       <div>
        <label for="telefono" class="block text-gray-700 font-medium">Telefono*</label>
        <input type="tel" id="phone" name="phone" pattern="[0-9]{9}"placeholder="(9 numeros) Sin el +56" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Asunto -->
      <div>
        <label for="asunto" class="block text-gray-700 font-medium">Asunto*</label>
        <input type="text" id="asunto" name="asunto" placeholder="" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
      </div>

      <!-- Mensaje -->
      <div>
        <label for="mensaje" class="block text-gray-700 font-medium">Mensaje*</label>
        <textarea id="mensaje" name="mensaje" rows="4" placeholder="Escribe tu mensaje aquí..." required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
      </div>

      <!-- Botón -->
      <button type="submit"
        class="w-full bg-green-600 text-white font-semibold py-3 rounded-lg hover:bg-green-700 transition">
        Enviar Mensaje
      </button>
      <h4>Los campos son obligatorios*</h4>   
    </form>
  </div>
</Layout>